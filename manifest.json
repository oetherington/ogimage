{

  "description": "Allows viewing of the image specified by og:image",
  "manifest_version": 2,
  "name": "ogimage",
  "version": "1.0",
  "homepage_url": "https://github.com/oetherington/ogimage",
  "icons": {
    "48": "icons/icon-48.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "ogimage",
    "default_popup": "ogimage.html"
  }

}
